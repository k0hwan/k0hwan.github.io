author = {Kim, Sunbum and Kim, Kyunghwan and Lim, Changsung and Lee, Geehyuk},
title = {Ball20: An In-Hand Near-Spherical 20-Sided Tangible Controller for Diverse Gesture Interaction in AR/VR},
